{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "types",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules/**/*", "dist"]
}
